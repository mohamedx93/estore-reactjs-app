{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@api": [
        "api"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
